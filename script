-- ‚ö° Load Rayfield Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- ü™ü Create the GUI Window
local Window = Rayfield:CreateWindow({
   Name = "Fantic Fly Utility Hub",
   LoadingTitle = "Initializing GUI",
   LoadingSubtitle = "With Fly, Speed & Keybind",
   ShowText = "Press K to Toggle GUI",
   Theme = "Ocean", -- üåä Try "Amethyst", "AmberGlow", or a custom theme table
   ToggleUIKeybind = "K",
   ConfigurationSaving = { Enabled = false },
   Discord = { Enabled = false },
   KeySystem = false
})

-- üìÅ Create Tab and Section
local Tab = Window:CreateTab("Fly Control", "airplay")
local Section = Tab:CreateSection("Main Controls")

-- üßæ Add Label & Paragraph for context
Tab:CreateLabel("Fly Feature Active", "navigation", Color3.fromRGB(0, 255, 255), false)
Tab:CreateParagraph({
    Title = "Instructions",
    Content = "Toggle Fly On/Off and adjust speed.\nYou fly in the direction of your mouse."
})

-- ‚öôÔ∏è Core Fly Logic
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local HRP = Character:WaitForChild("HumanoidRootPart")
local Mouse = LocalPlayer:GetMouse()

local flySpeed = 50
local flying = false

-- Create BodyVelocity
local bv = Instance.new("BodyVelocity")
bv.Velocity = Vector3.zero
bv.MaxForce = Vector3.zero
bv.Parent = HRP

local function startFlying()
    flying = true
    bv.MaxForce = Vector3.new(1e5, 1e5, 1e5)
    Rayfield:Notify({
        Title = "Fly Mode",
        Content = "Fly Activated!",
        Duration = 3,
        Image = "navigation"
    })
    RunService:BindToRenderStep("FlyUpdate", Enum.RenderPriority.Input.Value, function()
        if HRP and Mouse then
            local dir = (Mouse.Hit.Position - HRP.Position).Unit
            bv.Velocity = dir * flySpeed
        end
    end)
end

local function stopFlying()
    flying = false
    bv.MaxForce = Vector3.zero
    bv.Velocity = Vector3.zero
    RunService:UnbindFromRenderStep("FlyUpdate")
    Rayfield:Notify({
        Title = "Fly Mode",
        Content = "Fly Deactivated!",
        Duration = 3,
        Image = "slash"
    })
end

-- ‚úÖ Toggle Fly Button
Tab:CreateToggle({
   Name = "Fly On/Off",
   CurrentValue = false,
   Flag = "FlyToggle",
   Callback = function(Value)
      if Value then startFlying() else stopFlying() end
   end,
})

-- üåÄ Speed Control Slider
Tab:CreateSlider({
    Name = "Fly Speed",
    Range = {10, 150},
    Increment = 5,
    Suffix = " studs/sec",
    CurrentValue = flySpeed,
    Flag = "SpeedSlider",
    Callback = function(val)
        flySpeed = val
    end
})

-- ‚å®Ô∏è Keybind to Toggle Fly
Tab:CreateKeybind({
    Name = "Fly Toggle Hotkey",
    CurrentKeybind = "F",
    HoldToInteract = false,
    Flag = "FlyKeybind",
    Callback = function()
        if flying then
            stopFlying()
        else
            startFlying()
        end
    end,
})
